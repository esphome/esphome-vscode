          ],
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "pylontech::PylontechTextSensor",
                "parents": [
                  "Component"
                ]
              }
            },
            "base_state": {
              "key": "Optional",
