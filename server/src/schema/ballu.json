{
  "ballu.climate": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "climate.CLIMATE_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "supports_cool": {
              "key": "Optional",
              "default": "True",
              "type": "boolean"
            },
            "supports_heat": {
              "key": "Optional",
              "default": "True",
              "type": "boolean"
            },
            "sensor": {
              "key": "Optional",
              "use_id_type": "sensor::Sensor",
              "type": "use_id",
              "docs": "**[ID](https://esphome.io/guides/configuration-types.html#config-id)**: The sensor that is used to measure the ambient temperature. This is only for reporting the current temperature in the frontend.\n\n*See also: [None](https://esphome.io/components/climate/climate_ir.html#configuration-variables)*"
            },
            "transmitter_id": {
              "key": "GeneratedID",
              "use_id_type": "remote_base::RemoteTransmitterBase",
              "type": "use_id"
            },
            "receiver_id": {
              "key": "Optional",
              "use_id_type": "remote_base::RemoteReceiverBase",
              "type": "use_id"
            },
            "id": {
              "id_type": {
                "class": "ballu::BalluClimate",
                "parents": [
                  "climate_ir::ClimateIR",
                  "climate::Climate",
                  "EntityBase",
                  "Component",
                  "remote_base::RemoteReceiverListener",
                  "remote_base::RemoteTransmittable"
                ]
              }
            }
          }
        }
      }
    }
  }
}