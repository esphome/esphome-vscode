{
  "ina2xx_base": {
    "schemas": {
      "INA2XX_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "shunt_resistance": {
              "key": "Required"
            },
            "max_current": {
              "key": "Required"
            },
            "adc_range": {
              "key": "Optional",
              "default": "0",
              "type": "integer"
            },
            "adc_time": {
              "key": "Optional",
              "default": "4120 us",
              "type": "schema",
              "schema": {
                "config_vars": {
                  "bus_voltage": {
                    "key": "Optional",
                    "default": "4120 us"
                  },
                  "shunt_voltage": {
                    "key": "Optional",
                    "default": "4120 us"
                  },
                  "temperature": {
                    "key": "Optional",
                    "default": "4120 us"
                  }
                }
              }
            },
            "adc_averaging": {
              "key": "Optional",
              "default": "128",
              "type": "enum",
              "values": {
                "1": null,
                "4": null,
                "16": null,
                "64": null,
                "128": null,
                "256": null,
                "512": null,
                "1024": null
              }
            },
            "temperature_coefficient": {
              "key": "Optional",
              "default": "0",
              "type": "integer"
            },
            "shunt_voltage": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "mV"
                  },
                  "accuracy_decimals": {
                    "default": "5"
                  },
                  "device_class": {
                    "default": "voltage"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "bus_voltage": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "V"
                  },
                  "accuracy_decimals": {
                    "default": "5"
                  },
                  "device_class": {
                    "default": "voltage"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "temperature": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "\u00b0C"
                  },
                  "accuracy_decimals": {
                    "default": "5"
                  },
                  "device_class": {
                    "default": "temperature"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "current": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "A"
                  },
                  "accuracy_decimals": {
                    "default": "8"
                  },
                  "device_class": {
                    "default": "current"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "power": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "W"
                  },
                  "accuracy_decimals": {
                    "default": "6"
                  },
                  "device_class": {
                    "default": "power"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "energy": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "Wh"
                  },
                  "accuracy_decimals": {
                    "default": "8"
                  },
                  "device_class": {
                    "default": "energy"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "energy_joules": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "J"
                  },
                  "accuracy_decimals": {
                    "default": "8"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "charge": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "Ah"
                  },
                  "accuracy_decimals": {
                    "default": "8"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "charge_coulombs": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "C"
                  },
                  "accuracy_decimals": {
                    "default": "8"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        }
      }
    }
  }
}