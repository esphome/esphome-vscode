                                  "uint32_t": null,
                                  "uint64_t": null,
                                  "int8_t": null,
                                  "int16_t": null,
                                  "int32_t": null,
                                  "int64_t": null,
                                  "float": null,
                                  "double": null,
                                  "string": null
                                }
                              },
                              "string_encoding": {
                                "key": "Optional",
                                "default": "utf_8"
                              },
                              "endianness": {
                                "key": "Optional",
                                "default": "LITTLE",
                                "type": "enum",
                                "values": {
                                  "LITTLE": null,
                                  "BIG": null
                                }
                              }
                            }
                          }
                        },
                        "char_value_action_id_": {
                          "key": "GeneratedID",
                          "id_type": {
                            "class": "esp32_ble_server::esp32_ble_server_automations::BLECharacteristicSetValueAction",
                            "parents": [
                              "Action"
                            ]
                          }
                        },
                        "descriptors": {
                          "key": "Optional",
                          "default": "[]",
                          "is_list": true,
                          "type": "schema",
                          "schema": {
                            "extends": [
                              "esp32_ble_server.DESCRIPTOR_SCHEMA"
                            ]
                          }
                        },
                        "on_write": {
                          "key": "Optional",
                          "type": "trigger"
                        },
                        "description": {
                          "key": "Optional",
                          "type": "schema",
                          "maybe": "data",
                          "schema": {
