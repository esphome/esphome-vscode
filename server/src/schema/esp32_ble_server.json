                "config_vars": {
                  "id": {
                    "key": "GeneratedID",
                    "id_type": {
                      "class": "esp32_ble_server::BLEService",
                      "parents": []
                    }
                  },
                  "uuid": {
                    "key": "Required",
                    "data_type": "hex_uint32_t"
                  },
                  "advertise": {
                    "key": "Optional",
                    "default": "False",
                    "type": "boolean"
                  },
                  "characteristics": {
                    "key": "Optional",
                    "default": "[]",
                    "is_list": true,
                    "type": "schema",
                    "schema": {
                      "config_vars": {
