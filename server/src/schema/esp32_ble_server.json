                                  "int32_t": null,
                                  "int64_t": null,
                                  "float": null,
                                  "double": null,
                                  "string": null
                                }
                              },
                              "string_encoding": {
                                "key": "Optional",
                                "default": "utf_8"
                              },
                              "endianness": {
                                "key": "Optional",
                                "default": "LITTLE",
                                "type": "enum",
                                "values": {
                                  "LITTLE": null,
                                  "BIG": null
                                }
                              }
                            }
                          }
                        },
                        "read": {
                          "key": "Optional",
                          "default": "False",
                          "type": "boolean"
                        },
                        "write": {
                          "key": "Optional",
                          "default": "False",
                          "type": "boolean"
                        },
                        "notify": {
                          "key": "Optional",
