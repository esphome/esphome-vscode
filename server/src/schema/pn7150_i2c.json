{
  "pn7150_i2c": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "id_type": {
                "class": "pn7150::PN7150",
                "parents": [
                  "nfc::Nfcc",
                  "Component"
                ]
              },
              "key": "GeneratedID"
            },
            "i2c_id": {
              "key": "GeneratedID",
              "use_id_type": "i2c::I2CBus",
              "type": "use_id"
            },
            "address": {
              "key": "Optional",
              "default": "40",
              "data_type": "hex_uint8_t"
            },
            "on_emulated_tag_scan": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_finished_write": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_tag": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_tag_removed": {
              "key": "Optional",
              "type": "trigger"
            },
            "irq_pin": {
              "key": "Required",
              "schema": true,
              "modes": [
                "input"
              ],
              "type": "pin"
            },
            "ven_pin": {
              "key": "Required",
              "schema": true,
              "modes": [
                "output"
              ],
              "type": "pin"
            },
            "emulation_message": {
              "key": "Optional",
              "type": "string"
            },
            "tag_ttl": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "core.positive_time_period_milliseconds"
                ]
              }
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        }
      }
    }
  }
}