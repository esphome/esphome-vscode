{
  "gdk101": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "gdk101::GDK101Component",
                "parents": [
                  "PollingComponent",
                  "Component",
                  "i2c::I2CDevice"
                ]
              }
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            },
            "i2c_id": {
              "key": "GeneratedID",
              "use_id_type": "i2c::I2CBus",
              "type": "use_id"
            },
            "address": {
              "key": "Optional",
              "default": "24",
              "data_type": "hex_uint8_t"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        },
        "is_list": true
      }
    }
  },
  "gdk101.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "gdk101_id": {
              "key": "GeneratedID",
              "use_id_type": "gdk101::GDK101Component",
              "type": "use_id"
            },
            "radiation_dose_per_1m": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "\u00b5Sv/h"
                  },
                  "icon": {
                    "default": "mdi:radioactive"
                  },
                  "accuracy_decimals": {
                    "default": "2"
                  },
                  "device_class": {
                    "default": ""
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              },
              "docs": "Radiation average dose per 1 minute. All options from [Sensor](https://esphome.io/components/sensor/index.html#config-sensor).\n\n*See also: [gdk101 Sensor](https://esphome.io/components/sensor/gdk101.html#sensor)*"
            },
            "radiation_dose_per_10m": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "\u00b5Sv/h"
                  },
                  "icon": {
                    "default": "mdi:radioactive"
                  },
                  "accuracy_decimals": {
                    "default": "2"
                  },
                  "device_class": {
                    "default": ""
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              },
              "docs": "Radiation average dose per 10 minutes. All options from [Sensor](https://esphome.io/components/sensor/index.html#config-sensor).\n\n*See also: [gdk101 Sensor](https://esphome.io/components/sensor/gdk101.html#sensor)*"
            },
            "version": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "accuracy_decimals": {
                    "default": "1"
                  },
                  "entity_category": {
                    "default": "diagnostic"
                  }
                }
              },
              "docs": "Fimware version of the module. All options from [Sensor](https://esphome.io/components/sensor/index.html#config-sensor).\n\n*See also: [gdk101 Sensor](https://esphome.io/components/sensor/gdk101.html#sensor)*"
            },
            "status": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "entity_category": {
                    "default": "diagnostic"
                  }
                }
              },
              "docs": "Sensor status. All options from [Sensor](https://esphome.io/components/sensor/index.html#config-sensor).\n\n*See also: [gdk101 Sensor](https://esphome.io/components/sensor/gdk101.html#sensor)*"
            },
            "measurement_duration": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "s"
                  },
                  "icon": {
                    "default": "mdi:timer-outline"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "device_class": {
                    "default": "duration"
                  },
                  "state_class": {
                    "default": "total_increasing"
                  },
                  "entity_category": {
                    "default": "diagnostic"
                  }
                }
              },
              "docs": "Total time of measurement. All options from [Sensor](https://esphome.io/components/sensor/index.html#config-sensor).\n\n*See also: [gdk101 Sensor](https://esphome.io/components/sensor/gdk101.html#sensor)*"
            }
          }
        }
      }
    }
  },
  "gdk101.binary_sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "gdk101_id": {
              "key": "GeneratedID",
              "use_id_type": "gdk101::GDK101Component",
              "type": "use_id"
            },
            "vibrations": {
              "key": "Required",
              "type": "schema",
              "schema": {
                "extends": [
                  "binary_sensor.BINARY_SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "icon": {
                    "default": "mdi:vibrate"
                  },
                  "entity_category": {
                    "default": "diagnostic"
                  },
                  "device_class": {
                    "default": "vibration"
                  }
                }
              },
              "docs": "Vibration status. All options from [Binary Sensor](https://esphome.io/components/binary_sensor/index.html#config-binary-sensor).\n\n*See also: [gdk101 Binary Sensor](https://esphome.io/components/sensor/gdk101.html#binary-sensor)*"
            }
          }
        }
      }
    }
  }
}