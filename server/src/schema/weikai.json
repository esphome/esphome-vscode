{
  "weikai": {
    "schemas": {
      "WKBASE_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "weikai::WeikaiComponent",
                "parents": [
                  "Component"
                ]
              }
            },
            "crystal": {
              "key": "Optional",
              "default": "14745600",
              "type": "integer"
            },
            "test_mode": {
              "key": "Optional",
              "default": "0",
              "type": "integer"
            },
            "uart": {
              "key": "Required",
              "is_list": true,
              "type": "schema",
              "schema": {
                "config_vars": {
                  "id": {
                    "key": "Required",
                    "id_type": {
                      "class": "weikai::WeikaiChannel",
                      "parents": [
                        "uart::UARTComponent"
                      ]
                    }
                  },
                  "channel": {
                    "key": "Optional",
                    "default": "0",
                    "type": "integer"
                  },
                  "baud_rate": {
                    "key": "Required",
                    "type": "integer"
                  },
                  "stop_bits": {
                    "key": "Optional",
                    "default": "1",
                    "type": "enum",
                    "values": {
                      "1": null,
                      "2": null
                    }
                  },
                  "parity": {
                    "key": "Optional",
                    "default": "NONE",
                    "type": "enum",
                    "values": {
                      "NONE": null,
                      "EVEN": null,
                      "ODD": null
                    }
                  }
                }
              }
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        }
      },
      "WEIKAI_PIN_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "number": {
              "key": "Required",
              "type": "integer"
            },
            "mode": {
              "key": "Optional",
              "default": "{}",
              "type": "schema",
              "schema": {
                "config_vars": {
                  "input": {
                    "key": "Optional",
                    "default": "False",
                    "type": "boolean"
                  },
                  "output": {
                    "key": "Optional",
                    "default": "False",
                    "type": "boolean"
                  }
                }
              }
            },
            "inverted": {
              "key": "Optional",
              "default": "False",
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}