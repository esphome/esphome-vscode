{
  "lcd_base": {
    "schemas": {
      "LCD_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "display.BASIC_DISPLAY_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "dimensions": {
              "key": "Required",
              "docs": "**string**: The dimensions of the display with `COLUMNSxROWS`. If you\u2019re not sure, power the display on, turn contrast high up and just count them.\n\n*See also: [lcd_gpio Component](https://esphome.io/components/display/lcd_display.html#id1)*"
            },
            "user_characters": {
              "key": "Optional",
              "is_list": true,
              "type": "schema",
              "schema": {
                "config_vars": {
                  "position": {
                    "key": "Required",
                    "type": "integer"
                  },
                  "data": {
                    "key": "Required",
                    "is_list": true,
                    "type": "integer"
                  }
                }
              }
            },
            "update_interval": {}
          }
        }
      }
    }
  }
}