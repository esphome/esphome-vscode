        "type": "schema",
        "schema": {
          "extends": [
            "sensor.SENSOR_SCHEMA"
          ],
          "config_vars": {
            "unit_of_measurement": {
              "default": "ppm"
            },
            "accuracy_decimals": {
              "default": "2"
            },
            "state_class": {
              "default": "measurement"
            }
          }
        }
      },
