{
  "pulse_counter.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "extends": [
            "sensor.SENSOR_SCHEMA",
            "core.COMPONENT_SCHEMA"
          ],
          "config_vars": {
            "id": {
              "id_type": {
                "class": "pulse_counter::PulseCounterSensor",
                "parents": [
                  "sensor::Sensor",
                  "EntityBase",
                  "PollingComponent",
                  "Component"
                ]
              }
            },
            "unit_of_measurement": {
              "default": "pulses/min"
            },
            "icon": {
              "default": "mdi:pulse"
            },
            "accuracy_decimals": {
              "default": "2"
            },
            "state_class": {
              "default": "measurement"
            },
            "pin": {
              "key": "Required"
            },
            "count_mode": {
              "key": "Optional",
              "default": "{'rising_edge': 'INCREMENT', 'falling_edge': 'DISABLE'}",
              "type": "schema",
              "schema": {
                "config_vars": {
                  "rising_edge": {
                    "key": "Required",
                    "type": "enum",
                    "values": {
                      "DISABLE": null,
                      "INCREMENT": null,
                      "DECREMENT": null
                    }
                  },
                  "falling_edge": {
                    "key": "Required",
                    "type": "enum",
                    "values": {
                      "DISABLE": null,
                      "INCREMENT": null,
                      "DECREMENT": null
                    }
                  }
                }
              }
            },
            "use_pcnt": {
              "key": "Optional",
              "type": "boolean"
            },
            "internal_filter": {
              "key": "Optional",
              "default": "13us",
              "type": "schema",
              "schema": {
                "extends": [
                  "core.positive_time_period_microseconds"
                ]
              }
            },
            "total": {
              "key": "Optional",
              "type": "schema",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "pulses"
                  },
                  "icon": {
                    "default": "mdi:pulse"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "state_class": {
                    "default": "total_increasing"
                  }
                }
              }
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            }
          }
        }
      }
    }
  },
  "pulse_counter": {
    "action": {
      "set_total_pulses": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "Required",
              "use_id_type": "pulse_counter::PulseCounterSensor",
              "type": "use_id"
            },
            "value": {
              "key": "Required",
              "templatable": true,
              "type": "integer",
              "data_type": "uint32_t"
            }
          }
        }
      }
    }
  }
}