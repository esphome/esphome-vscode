{
  "ltr501.sensor": {
    "schemas": {
      "CONFIG_SCHEMA": {
        "type": "schema",
        "schema": {
          "config_vars": {
            "id": {
              "key": "GeneratedID",
              "id_type": {
                "class": "ltr501::LTRAlsPs501Component",
                "parents": [
                  "PollingComponent",
                  "Component",
                  "i2c::I2CDevice"
                ]
              }
            },
            "type": {
              "key": "Optional",
              "default": "ALS_PS",
              "type": "enum",
              "values": {
                "ALS": null,
                "PS": null,
                "ALS_PS": null
              }
            },
            "auto_mode": {
              "key": "Optional",
              "default": "True",
              "type": "boolean"
            },
            "gain": {
              "key": "Optional",
              "default": "1X",
              "type": "enum",
              "values": {
                "1X": null,
                "150X": null
              }
            },
            "integration_time": {
              "key": "Optional",
              "default": "100ms"
            },
            "repeat": {
              "key": "Optional",
              "default": "500ms"
            },
            "glass_attenuation_factor": {
              "key": "Optional",
              "default": "1.0"
            },
            "ps_cooldown": {
              "key": "Optional",
              "default": "5s",
              "type": "schema",
              "schema": {
                "extends": [
                  "core.positive_time_period_seconds"
                ]
              }
            },
            "ps_gain": {
              "key": "Optional",
              "default": "1X",
              "type": "enum",
              "values": {
                "1X": null,
                "4X": null,
                "8X": null,
                "16X": null
              }
            },
            "ps_high_threshold": {
              "key": "Optional",
              "default": "65535",
              "type": "integer"
            },
            "ps_low_threshold": {
              "key": "Optional",
              "default": "0",
              "type": "integer"
            },
            "on_ps_high_threshold": {
              "key": "Optional",
              "type": "trigger"
            },
            "on_ps_low_threshold": {
              "key": "Optional",
              "type": "trigger"
            },
            "ambient_light": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "lx"
                  },
                  "icon": {
                    "default": "mdi:brightness-6"
                  },
                  "accuracy_decimals": {
                    "default": "1"
                  },
                  "device_class": {
                    "default": "illuminance"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "infrared_counts": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "#"
                  },
                  "icon": {
                    "default": "mdi:brightness-5"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "device_class": {
                    "default": "illuminance"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "full_spectrum_counts": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "#"
                  },
                  "icon": {
                    "default": "mdi:brightness-7"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "device_class": {
                    "default": "illuminance"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "ps_counts": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "#"
                  },
                  "icon": {
                    "default": "mdi:hand-wave-outline"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "device_class": {
                    "default": "distance"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "actual_gain": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "icon": {
                    "default": "mdi:multiplication"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "device_class": {
                    "default": "illuminance"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "actual_integration_time": {
              "key": "Optional",
              "type": "schema",
              "maybe": "name",
              "schema": {
                "extends": [
                  "sensor.SENSOR_SCHEMA"
                ],
                "config_vars": {
                  "unit_of_measurement": {
                    "default": "ms"
                  },
                  "icon": {
                    "default": "mdi:timer-outline"
                  },
                  "accuracy_decimals": {
                    "default": "0"
                  },
                  "state_class": {
                    "default": "measurement"
                  }
                }
              }
            },
            "update_interval": {
              "key": "Optional",
              "default": "60s"
            },
            "i2c_id": {
              "key": "GeneratedID",
              "use_id_type": "i2c::I2CBus",
              "type": "use_id"
            },
            "address": {
              "key": "Optional",
              "default": "35",
              "data_type": "hex_uint8_t"
            }
          },
          "extends": [
            "core.COMPONENT_SCHEMA"
          ]
        }
      }
    }
  }
}